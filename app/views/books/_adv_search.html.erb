<fieldset>
  <br/>
  <legend>Busca Avançada</legend>
  <%= form_tag (@user ? user_books_path(@user) : books_path), :method => :get, :id => 'advanced_search' do %>
    <%= hidden_field_tag :search, params[:search] %>
    <%= twitter_bootstrap_text_field_tag :title_filter, 'Título', params %>
    <%= twitter_bootstrap_text_field_tag :author_filter, 'Autor', params %>
    
    <% if !params[:user_id] %>
      <%= twitter_bootstrap_select :user_filter, 'Biblioteca', User.names %>
    <% end %>

    <%= twitter_bootstrap_text_field_tag :editor_filter, 'Editor', params %>
    <%= twitter_bootstrap_select :language_filter, 'Língua', Book.languages %>

    <%= twitter_bootstrap_text_field_tag :subject_filter, 'Assuntos', params %>
    <%= twitter_bootstrap_text_field_tag :tag_filter, 'Palavra Chave', params %>
    <%= twitter_bootstrap_check_box_tag :pdf_filter, 'PDF' %>

    <%= twitter_bootstrap_submit_tag 'Busca'%>
  <% end %>
</fieldset>  
