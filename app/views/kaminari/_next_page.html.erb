<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<li class="next">
  <% if params[:user_id] %>
    <%= link_to_unless current_page.last?, raw('Próxima &rsaquo;'), user_books_path(@user, params.merge(:page => current_page + 1)), :rel => 'next', :remote => remote %>
  <% else %>
    <%= link_to_unless current_page.last?, raw('Próxima &rsaquo;'), url, :rel => 'next', :remote => remote %>
  <% end %>
</li>
